<div xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd" class="ck-slideshow" id="${clientId}">
    <div class="ck-slideshow-slides">
        <t:body/>
    </div>
    <!--
        TODO display conditionally
        TODO control IDs can't be static
    -->
    <div id="${clientId}-ctls" class="ck-slideshow-ctls" style="display: none;">
        <a href="#" id="${clientId}-ctl-prev" class="ss-ctl-prev"> &lt; prev </a>
        <a href="#" id="${clientId}-ctl-play_pause" class="ss-ctl-play_pause"> || play/pause </a>
        <a href="#" id="${clientId}-ctl-next" class="ss-ctl-next"> &gt; next </a>
    </div>
</div>